# Loo arvud 1-100 ja lisa iga arvu järele punkt
for i in range(1, 101):
    if i % 10 == 0:
        print(f"{i}.")
    else:
        print(f"{i}.", end=" ")

# Reavahetus
print()

# Loo arvud 1-100 ja lisa iga arvu järele punkt
for i in range(1, 101):
    if i % 10 == 0:
        print(f"{i}.")
    else:
        print(f"{i}.", end=" ")

# Reavahetus
print()

# Rida - koosta tärnidest vertikaalses reas horisontaalne rida
for i in range(10):
    print("*", end=" ")

# Reavahetus
print()

# Rida II - koosta tärnidest horisontaalses reas vertikaalne rida
for i in range(10):
    print("*")

# Reavahetus
print()

# Ruut - küsi kasutajalt ruudu suurust ja koosta tärnidest ruut
ruudu_suurus = int(input("Sisesta ruudu suurus: "))
for i in range(ruudu_suurus):
    print("*" * ruudu_suurus)

# Reavahetus
print()

# Kahanev - väljasta paarisarvud 10-0
for i in range(10, -1, -2):
    print(i, end=" ")

# Reavahetus
print()

# Kolmega jagunevad - tekita arvud 1-100, aga kuva kolmega jagunevad arvud
for i in range(1, 101):
    if i % 3 == 0:
        print(i, end=" ")

# Reavahetus
print()

# Massiivid ja tsüklid
tudrukud = ["Marta", "Liisa", "Anna", "Laura"]
poisid = ["Markus", "Andreas", "Karl", "Jaan"]

# Väljasta poiste ja tüdrukute paarid erinevatel ridadel
for t, p in zip(tudrukud, poisid):
    print(f"Tüdruk: {t}, Poiss: {p}")

# Reavahetus
print()

# Tee massiivide kopiaad
tudrukud_koopia = tudrukud.copy()
poisid_koopia = poisid.copy()

# Väljasta kopeeritud massiivid
print("Tüdrukute kopiaa:", tudrukud_koopia)
print("Poiste kopiaa:", poisid_koopia)

# Reavahetus
print()

# Tekita suvalistest tüdrukutest ja poistest koopia (nimed ei tohi korduda)
import random

tudrukud_suvaline = random.sample(tudrukud, len(tudrukud))
poisid_suvaline = random.sample(poisid, len(poisid))

print("Suvaline tüdrukute järjekord:", tudrukud_suvaline)
print("Suvaline poiste järjekord:", poisid_suvaline)
