# Kahe täisarvulise muutuja loomine
a = 10
b = 5

# Liitmine
sum_result = a + b
print(f"{a} + {b} = {sum_result}")

# Lahutamine
subtraction_result = a - b
print(f"{a} - {b} = {subtraction_result}")

# Korrutamine
multiply_result = a * b
print(f"{a} * {b} = {multiply_result}")

# Jagamine
divide_result = a / b
print(f"{a} / {b} = {divide_result}")

# Jäägi leidmine
remainder_result = a % b
print(f"{a} % {b} = {remainder_result}")

# Millimeetrite arv
mm = 2500



# Teisendamine sentimeetriteks ja meetriteks
cm = mm / 10
m = mm / 1000

# Vastuste vormindamine kahe koha peale pärast koma
cm_formatted = "{:.2f}".format(cm)
m_formatted = "{:.2f}".format(m)

# Väljastamine
print(f"{mm} mm on {cm_formatted} cm ja {m_formatted} m.")


# Kolmnurga küljepikkused
a = 5
b = 12

# Ümbermõõdu leidmine
perimeter = a + b + (a**2 + b**2)**0.5

# Pindala leidmine
area = (a * b) / 2

# Ümardamine täisarvuni ja täislausega
perimeter_rounded = round(perimeter)
area_rounded = round(area)

print(f"Täisnurkse kolmnurga ümbermõõt on {perimeter_rounded} ja pindala on {area_rounded}.")
